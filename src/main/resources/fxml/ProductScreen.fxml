<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sdabyd2.javafx.orders.controller.ProductController">
   <children>
      <VBox layoutY="-2.0" prefHeight="42.0" prefWidth="601.0">
         <children>
            <Label fx:id="textFieldTitle" text="NOWY PRODUKT">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="-1.0" layoutY="35.0" prefHeight="166.0" prefWidth="603.0">
         <children>
            <Label text="Nazwa przedmiotu">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="textFieldName" prefHeight="25.0" prefWidth="100.0">
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
            <Label text="Kwota jednostkowa [zł]">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="15.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="textFieldValue" maxWidth="150.0" minWidth="150.0" prefHeight="25.0" prefWidth="150.0">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <HBox alignment="TOP_RIGHT" layoutY="201.0" prefHeight="52.0" prefWidth="601.0">
         <children>
            <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#onActionButtonCancel" text="Anuluj">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="buttonApply" mnemonicParsing="false" onAction="#onActionButtonApply" text="Zatwierdź">
               <HBox.margin>
                  <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
